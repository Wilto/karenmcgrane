<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ metadata.title }}{% if title %} - {{ title }}{% endif %}</title>
    <meta name="description" content="{{ metadata.description }}">

    <meta property="og:site_name" content="{{ metadata.title }}">

    <link rel="canonical" href="{{ metadata.domain }}{{ page.url | url }}">

    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="152.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="144.png">
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="120.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="114.png">
    <link rel="icon" type="image/png" href="32.png" sizes="32x32">
    <meta name="msapplication-TileImage" content="144.png">

    <meta name="theme-color" content="#000000">

    <meta property="og:site_name" content="{{ metadata.title }}">
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:url" content="{{ metadata.domain }}{{page.url}}">

    <meta name="twitter:description" content="{{ metadata.description }}">
    <meta property="og:description" content="{{ metadata.description }}">

    <meta name="twitter:image" content="placeholder.jpg">
    <meta name="twitter:image:alt" content="">
    <meta property="og:image" content="placeholder.jpg">
    <meta property="og:image:alt" content="">

{% if type == "article" or type == "review" %}
    <meta property="og:type" content="article">
{% endif %}

    <meta name="author" content="Wilto Makes Food">

    <link rel="stylesheet" href="/_assets/css/all.css?{{ metadata.build }}">

    <!-- RSS Feed(s): -->
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <a href="#main" class="a11y-only focusable skiplink">Skip to Main Content</a>
    <main role="main" id="main"{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      <h1>{{ title }}</h1>
      {{ content | safe }}
    </main>
  </body>
</html>
